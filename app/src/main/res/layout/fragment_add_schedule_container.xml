<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/title_activity_add_schedule" />

    <com.pechuro.bsuirschedule.widget.TabLayout
        android:id="@+id/addScheduleContainerTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <com.pechuro.bsuirschedule.widget.ViewPager
        android:id="@+id/addScheduleContainerViewPager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>