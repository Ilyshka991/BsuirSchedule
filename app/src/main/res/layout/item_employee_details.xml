<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/employeeDetailsPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:src="@drawable/employee_placeholder" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/employeeDetailsFullName"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employeeDetailsPhoto"
        tools:text="Ivanov Ivan Ivanovich" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/employeeDetailsAdditionalInfo"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/employeeDetailsFullName"
        app:layout_constraintStart_toStartOf="@+id/employeeDetailsFullName"
        app:layout_constraintTop_toBottomOf="@id/employeeDetailsFullName"
        tools:text="доцент, кафедра" />
</androidx.constraintlayout.widget.ConstraintLayout>